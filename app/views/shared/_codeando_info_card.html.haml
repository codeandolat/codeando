.card.sidebar-personal-info.blue-border-top.rounded-borders
  .card-image
    %figure.image.is-128x128.big-margin-top.is-flex
      = image_tag 'avatar', alt: 'Codeando Avatar'
  .card-content.has-text-centered
    %h5.title.is-5 Follow Codeando
    %hr
    %ul.sidebar-social-list
      %li
        %a.social-link.facebook{href: 'https://www.facebook.com/codeando.lat/', target: '_blank'}
          = fa_icon 'facebook'
      %li
        %a.social-link.twitter{href: 'https://twitter.com/codeando', target: '_blank'}
          = fa_icon 'twitter'
      %li
        %a.social-link.youtube{href: 'https://www.youtube.com/channel/UCujes60UcwYVq7PS4f3OUjg', target: '_blank'}
          = fa_icon 'youtube'
