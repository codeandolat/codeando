.shared-container
  - if controller_name != 'sessions'
    .link-container
      = link_to 'Ingresar', new_session_path(resource_name)

  - if devise_mapping.registerable? && controller_name != 'registrations'
    .link-container
      = link_to 'Regístrate', new_registration_path(resource_name)

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    .link-container
      = link_to "Olvidaste tu contraseña?", new_password_path(resource_name)

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    .link-container
      = link_to 'No recibiste el correo de confirmación?', new_confirmation_path(resource_name)

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    .link-container
      = link_to 'No recibiste el correo de desbloqueo?', new_unlock_path(resource_name)
