%h1.title.is-2 Regístrate
%hr

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .field
    = f.label 'Correo electrónico', class: 'label'
    .control
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input'

  .field
    = f.label 'Contraseña', class: 'label'
    .control
      = f.password_field :password, autocomplete: 'off', class: 'input'
    - if @minimum_password_length
      %em (#{@minimum_password_length} caracteres mínimo)

  .field
    = f.label 'Confirma contraseña', class: 'label'
    .control
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'input'

  .has-text-right
    = f.submit 'Regístrate', class: 'button is-success is-fullwidth'

.has-text-centered.big-margin-top
  = render 'devise/shared/links'
