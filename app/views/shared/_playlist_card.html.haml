.card
  .card-content
    .columns
      .column.is-5
        %img{src: playlist.thumbnail_url(size = :medium)}
      .column
        %h4.title.is-4.medium-margin-bottom= playlist.title
        %p.medium-margin-bottom
          Created 
          = time_ago_in_words(playlist.published_at, include_seconds: true) 
          ago
        %a.button.is-rounded.is-outlined.is-success{href: "https://www.youtube.com/playlist?list=#{playlist.id}", target: '_blank'} See more
        = link_to 'See videos', playlist_page_path(playlist.id), class: 'button is-rounded is-outlined is-success'
