= form_for [:admin, @post] do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title, class: 'label'
    .control
      = f.text_field :title, class: 'input'
  .field
    = f.label :subtitle, class: 'label'
    .control
      = f.text_area :subtitle, class: 'textarea'
  .field
    = f.label :tag_list, class: 'label'
    .control
      = f.text_field :tag_list, value: f.object.tag_list.to_s, class: 'input', placeholder: 'e.g. tag1, tag2...'
  .file.big-margin-bottom
    %label.file-label
      = f.file_field :image, class: 'file-input'
      %span.file-cta
        %span.file-icon
          = fa_icon 'upload'
        %span.file-label Choose a fileâ€¦
  .field
    = f.label :content, class: 'label'
    .control
      = f.text_area :content, class: 'textarea tinymce', rows: 10, cols: 120
      = tinymce
  .has-text-right
    = f.submit 'Save', class: 'button is-success is-medium'
